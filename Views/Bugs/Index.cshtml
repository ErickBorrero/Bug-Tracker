@model IEnumerable<BugTracker.Models.Bug>

@{
    ViewData["Title"] = "Index";
}

<h2>Reported Bugs</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-dark table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateResolved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
                <select>
                    <option>All</option>
                    <option>Unresolved</option>
                    <option>Resolved</option>
                </select>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConfirmationStatus)
                <select>
                    <option>All</option>
                    <option>Unconfirmed</option>
                    <option>Confirmed</option>
                </select>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateResolved)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConfirmationStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td id="bugOptions">
                <a asp-action="Edit" asp-route-id="@item.BugId">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.BugId">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.BugId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
