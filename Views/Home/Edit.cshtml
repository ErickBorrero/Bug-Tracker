@page
@model BugTracker.Views.Home.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Bug</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Bug.BugId" />
            <div class="form-group">
                <label asp-for="Bug.DateCreated" class="control-label"></label>
                <input asp-for="Bug.DateCreated" class="form-control" />
                <span asp-validation-for="Bug.DateCreated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bug.Description" class="control-label"></label>
                <input asp-for="Bug.Description" class="form-control" />
                <span asp-validation-for="Bug.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bug.Status" class="control-label"></label>
                <input asp-for="Bug.Status" class="form-control" />
                <span asp-validation-for="Bug.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bug.ConfirmationStatus" class="control-label"></label>
                <input asp-for="Bug.ConfirmationStatus" class="form-control" />
                <span asp-validation-for="Bug.ConfirmationStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bug.Category" class="control-label"></label>
                <input asp-for="Bug.Category" class="form-control" />
                <span asp-validation-for="Bug.Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
